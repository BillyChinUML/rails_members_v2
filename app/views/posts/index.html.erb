<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <strong><%= post.title %></strong><br>
    <%= post.body %>
  </li>
  <% end %>
</ul>

<%= link_to "New Post", new_post_path %><br>
<%= link_to "Home", root_path %><br>

<% if user_signed_in? %>
<p>If you see this, that means you're signed in!</p>
<% end %>
